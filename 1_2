//http://espressocode.top/c-library-math-h-functions/
#include <stdio.h>
#include <math.h>

int main ()

{
    double x, y, a, b, h, ret;

    printf("Enter a, b, h: ");
    int q = scanf("%lf%lf%lf", &a, &b, &h);
    if(q == 3){
        if ( (a <= b && h < 0) || (a >= b && h > 0) ) printf("Something is wrong\n");
        else

            do
            {
                x = a;
                if(x != 1) {
                    y = (1.0 + x) / (1.0 - x);

                    if (y <= 0) {
                        printf("Our function is not defined for x>=1\n");
                        break;
                    }

                    else {
                        ret = log(y);
                        printf("ln(%lf) = %lf\n", y, ret);
                    }
                    a = a + h;
                }
                else {
                    printf("Our function is not defined for x>=1\n");
                    break;
                }


            }
            while((a < b-0.01 && h>0 ) || (a > b-0.01 && h < 0));

    }
    else
        printf("ERROR");

    return 0;
}
